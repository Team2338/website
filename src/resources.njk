---
title: Resources
layout: base.njk
permalink: /resources/
css: resources.css
---
<header class="hero">
    <div class="hero__content">
        <h1 class="hero__title">Resources</h1>
        <p class="hero__subtitle">Tools, guides, and materials for our team and the FIRST community</p>
    </div>
</header>

<section class="resources">
    <div class="resources__container">
        {% if resources and resources.categories %}
            {% for category in resources.categories %}
                <div class="resource-category">
                    <h2 class="resource-category__title">{{ category.name }}</h2>
                    <p class="resource-category__description">{{ category.description }}</p>

                    <div class="resource-grid">
                        {% for resource in category.items %}
                            <a href="{{ resource.url }}" target="_blank" rel="noopener noreferrer" class="resource-card">
                                <div class="resource-card__icon">
                                    {% if resource.icon %}
                                        <img src="{{ resource.icon }}" alt="{{ resource.name }} icon">
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 0 24 24" width="48" fill="currentColor">
                                            <path d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                                        </svg>
                                    {% endif %}
                                </div>
                                <h3 class="resource-card__title">{{ resource.name }}</h3>
                                <p class="resource-card__description">{{ resource.description }}</p>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p style="color: white; text-align: center;">Resources coming soon! Check back later.</p>
        {% endif %}
    </div>
</section>