<section class="intro">
    <div class="content">
        <div class="left">
            <div class="wrapper">
                <h1>Contact <span>Us</span></h1>
            </div>
        </div>
    </div>
</section>
<section class="contact-form">
    <div class="left">
        <div class="email details">
            <i class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24" fill="currentColor">
                    <path d="M0 0h24v24H0z" fill="none"/>
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
            </i>
            <h3 class="title">Email</h3>
            <p class="detail" id="email-display">Loading...</p>
        </div>
        <div class="location details">
            <i class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24" fill="currentColor">
                    <path d="M0 0h24v24H0z" fill="none"/>
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
            </i>
            <h3 class="title">Location</h3>
            <p class="detail">Oswego, IL</p>
        </div>
    </div>
    
    <div class="right">
        <form class="form" id="contact-form" method="POST">
            <div class="form-div">
                <label class="form-label">Name: </label>
                <input class="form-controller name" type="text" name="name" required/>
            </div>
            <div class="form-div">
                <label class="form-label">Email: </label>
                <input class="form-controller email" type="email" name="email" required/>
            </div>
            <div class="form-div">
                <label class="form-label">Message: </label>
                <textarea class="form-controller message" name="message" rows="6" required></textarea>
            </div>
            <div class="form-div">
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>
</section>

<script>
    (function() {
        const encoded = ['2338FRC', 'SD308', 'ORG'];
        const email = encoded[0] + '@' + encoded[1] + '.' + encoded[2];
        document.getElementById('email-display').textContent = email;
        
        // Set form action dynamically
        const formId = '{{ site.formspreeId }}'; // Injected from Eleventy data
        document.getElementById('contact-form').action = 'https://formspree.io/f/' + formId;
    })();
</script>